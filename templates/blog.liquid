{% layout "blog" %}
{% block content %}
	{% collection "blog" by 2 query 'tags={{ mixture.route.tag }}' order desc %}
		{% if collection.current_page > collection.pages and collection.size > 0 %}
			{% include "blog/paged-too-far" %}
		{% elseif collection.size == 0 %}
			{% include "blog/no-articles" %}
		{% else %}
			{% assign currentpage = collection.current_page %}
			{% include "blog/article" with collection.items %}
			{% include "blog/paging" %}
		{% endif %}
	{% endcollection %}
{% endblock %}