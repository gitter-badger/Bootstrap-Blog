{% layout "none" %}
{% contenttype "application/xml" %}
<rss version="2.0">
	<channel>
		<generator>Mixture</generator>
		<title>{{ global.title }}</title>
		<link>{{ global.domain }}</link>
		<description>{{ global.intro }}</description>
		<language>en</language>
		<webMaster>{{ global.email }}</webMaster>
		<copyright>{{ 'now' | date: "%Y" }}</copyright>
		<pubDate>Fri, 10 Oct 2014 12:17:05 GMT</pubDate>
		{% collection "blog" by 10 order desc %}
			{% include "blog/rss-item" with collection.items %}
		{% endcollection %}
	</channel>
</rss>